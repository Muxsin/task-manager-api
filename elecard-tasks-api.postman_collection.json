						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Jane\",\n    \"email\": \"jane@gmail.com\",\n    \"password\": \"secret\",\n    \"password_confirmation\": \"secret\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
